<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout android:id="@+id/grid_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView android:id="@+id/grid_item_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView android:id="@+id/grid_item_day_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <TextView android:id="@+id/grid_item_day_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/grid_item_day_name"
            android:textSize="26sp"/>
    </RelativeLayout>

</LinearLayout>